{
  "name": "prompt-engineer-matrix",
  "version": "0.1.0-20251005",
  "private": true,
  "description": "智能提示词工程师代理系统 - Agent矩阵架构",
  "packageManager": "pnpm@10.6.1",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "npm": "请使用pnpm代替npm",
    "yarn": "请使用pnpm代替yarn"
  },
  "scripts": {
    "dev": "npm-run-all build:core build:ui dev:web",
    "dev:core": "pnpm -F @prompt-matrix/core dev",
    "dev:ui": "pnpm -F @prompt-matrix/ui dev",
    "dev:web": "pnpm -F @prompt-matrix/web dev",
    "build": "npm-run-all build:core build:ui build:web",
    "build:core": "pnpm -F @prompt-matrix/core build",
    "build:ui": "pnpm -F @prompt-matrix/ui build",
    "build:web": "pnpm -F @prompt-matrix/web build",
    "clean": "npm-run-all clean:dist clean:vite",
    "clean:dist": "rimraf \"packages/core/dist\" \"packages/ui/dist\" \"packages/web/dist\"",
    "clean:vite": "rimraf \"packages/*/node_modules/.vite\"",
    "test": "pnpm -r test --run --passWithNoTests",
    "test:core": "node test-core.mjs",
    "lint": "pnpm -F @prompt-matrix/ui lint && pnpm -F @prompt-matrix/web lint",
    "lint:fix": "pnpm -F @prompt-matrix/ui lint:fix && pnpm -F @prompt-matrix/web lint:fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "prompt-engineering",
    "ai-agent",
    "llm",
    "agent-matrix"
  ],
  "author": "pp",
  "license": "Apache-2.0"
}
